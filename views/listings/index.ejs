<% layout('/layouts/boilerplate') %>
<body>
    <h3>ALL LISTINGS</h3>
    <!-- <form method="GET" action="/listings/new">
        <button>Create new Listings</button>
    </form> -->
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
      <%for(let listing of allListings){ %>
        <a  class="listing-link" href="/listings/<%= listing._id%>">
<div class="card col" style="width: 20rem;">
  <img src="<%= (typeof listing.image === 'string' && listing.image) || (listing.image && listing.image.url) || 'https://images.pexels.com/photos/2325447/pexels-photo-2325447.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2' %>" class="card-img-top" alt="listing_image" style="height:20rem">
  <div class="card-img-overlay"></div>
  <div class="card-body">
    <p class="card-text">
        <b><%= listing.title%></b><br>
        &#x20B9 <%= listing.price ? listing.price.toLocaleString("en-IN") : "N/A" %>/night
        <% if (listing.owner) { %>
          <br><small class="text-muted">Owner: <%= listing.owner.username %></small>
        <% } %>
    </p>
  </div>
</div>
</a>
 <%  }%>
    </div>
     
</body>
